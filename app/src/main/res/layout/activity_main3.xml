<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".MainActivity3">
 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">



     <ImageView
        android:id="@+id/imageView"
        android:layout_width="72dp"
        android:layout_height="63dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="316dp"
        android:layout_marginBottom="664dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

     <TextView
         android:id="@+id/nome"
         android:layout_width="234dp"
         android:layout_height="61dp"
         android:layout_marginStart="100dp"
         android:layout_marginTop="20dp"
         android:layout_marginEnd="5dp"
         android:layout_marginBottom="662dp"
         android:text="TextView"
         android:textColor="@color/black"
         android:textSize="20dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

     <ImageView
         android:id="@+id/indietro"
         android:layout_width="69dp"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/nome"
         android:layout_alignParentRight="true"
         android:layout_marginLeft="-105dp"
         android:layout_marginRight="362dp"
         app:srcCompat="@drawable/ic_indietro"></ImageView>

     <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messaggi"
            android:layout_width="match_parent"
            android:layout_height="552dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="91dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="500dp">

        </androidx.recyclerview.widget.RecyclerView>

     <EditText
         android:id="@+id/scrivi"
         android:layout_width="325dp"
         android:layout_height="46dp"
         android:layout_alignParentBottom="true"
         android:layout_marginStart="3dp"
         android:layout_marginTop="659dp"
         android:layout_marginEnd="64dp"
         android:layout_marginBottom="18dp"
         android:background="#0084FF"
         android:breakStrategy="balanced"
         android:ellipsize="end"
         android:ems="10"
         android:inputType="textPersonName"
         android:maxLines="3"
         android:text=""
         android:textColor="@color/black"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

     <ImageView
         android:id="@+id/invio"
         android:layout_width="53dp"
         android:layout_height="50dp"
         android:layout_alignParentBottom="true"
         android:layout_marginStart="344dp"
         android:layout_marginTop="659dp"
         android:layout_marginEnd="14dp"
         android:layout_marginBottom="18dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:srcCompat="@drawable/ic_invia" />

 </RelativeLayout>
</ScrollView>